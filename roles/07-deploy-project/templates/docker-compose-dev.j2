services:
  php:
    build:
      context: ./{{ project_home }}
      dockerfile: docker/php/Dockerfile
    restart: always
    volumes:
      - ./{{ project_home }}:/var/www/app
    environment:
      - PHP_IDE_CONFIG=serverName=Docker
    networks:
      - retweets-dev
    depends_on:
      - mysql
      - clickhouse
      - redis 

  nginx:
    build:
      context: ./{{ project_home }}
      dockerfile: docker/nginx/Dockerfile
    restart: always
    volumes:
      - ./{{ project_home }}:/var/www/app
    ports:
      - "8080:80"
    networks:
      - retweets-dev
    depends_on: 
      - php 
      
  workers:
    build:
      context: ./{{ project_home }}
      dockerfile: docker/php/Dockerfile
    entrypoint: [ "supervisord", "-c", "/etc/supervisor/supervisord.conf", "-n", "-uroot", "-s" ]
    restart: always
    deploy:
      replicas: 1
      resources:
        limits:
          cpus: "1"
          memory: 3G
        reservations:
          cpus: "0.1"
          memory: 256M
    volumes:
      - ./{{ project_home }}:/var/www/app
    environment:
      - PHP_IDE_CONFIG=serverName=Docker
      - BASE_APP_USER=root
    networks:
      - retweets-dev
    depends_on: 
      - php 

  cron:
    build:
      context: ./{{ project_home }}
      dockerfile: docker/php/Dockerfile
    entrypoint: [ "cron", "-f" ]
    restart: always
    volumes:
      - ./{{ project_home }}:/var/www/app
    networks:
      - retweets-dev
    depends_on: 
      - php

  clickhouse:
    image: clickhouse/clickhouse-server
    restart: always
    environment:
      - CLICKHOUSE_DB={{ clickhouse_database }}
      - CLICKHOUSE_USER={{ clickhoise_username }}
      - CLICKHOUSE_PASSWORD={{ clickhouse_password }}
    volumes: 
      - ./clickhouse:/var/lib/clickhouse/
      - ./init-click-db.sh:/docker-entrypoint-initdb.d/init-db.sh
    networks:
      - retweets-dev
            
  redis:
    image: redis:alpine
    restart: always
    networks:
      - retweets-dev
      
  rabbitmq:
    image: rabbitmq:management-alpine
    restart: always
    environment:
      - RABBITMQ_DEFAULT_USER={{ RABBITMQ_DEFAULT_USER }}
      - RABBITMQ_DEFAULT_PASS={{ RABBITMQ_DEFAULT_PASS }}
    networks:
      - retweets-dev

  mysql:
    image: mysql:8
    restart: always
    deploy:
      resources:
        limits:
          cpus: "4"
          memory: 8G
        reservations:
          cpus: "2"
          memory: 1G
    environment:
      - MYSQL_ROOT_PASSWORD={{ MYSQL_ROOT_PASSWORD }}
      - MYSQL_DATABASE={{ MYSQL_DB }}
      - MYSQL_USER={{ MYSQL_USER }}
      - MYSQL_PASSWORD={{ MYSQL_PASSWORD }}
    volumes:
      - ./mysql/data:/var/lib/mysql:rw
      - ./mysql/config:/etc/mysql:ro
    networks:
      - retweets-dev

networks:
  retweets-dev: